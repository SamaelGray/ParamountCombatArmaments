<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef Name="PCA_TurretBase" ParentName="BuildingBase" Abstract="True">
		<thingClass>Building_TurretGun</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<damageData>
				<rect>(0.2,0.2,0.6,0.6)</rect>
			</damageData>
			<drawSize>(3,3)</drawSize>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<tradeability>All</tradeability>
		<techLevel>Industrial</techLevel>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>0.7</Flammability>
			<WorkToMake>10000</WorkToMake>
			<Beauty>-60</Beauty>
		</statBases>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="CompProperties_Mannable">
				<manWorkType>Violent</manWorkType>
			</li>
		</comps>
		<tickerType>Normal</tickerType>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<fillPercent>0.5</fillPercent>
		<castEdgeShadows>false</castEdgeShadows>
		<hasTooltip>true</hasTooltip>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<building>
			<ai_combatDangerous>true</ai_combatDangerous>
			<turretBurstCooldownTime>1</turretBurstCooldownTime>
		</building>
		<placeWorkers>
			<li>PlaceWorker_TurretTop</li>
			<li>PlaceWorker_ShowTurretRadius</li>
		</placeWorkers>
		<thingCategories>
			<li>BuildingsSecurity</li>
		</thingCategories>
		<designationCategory>Security</designationCategory>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
	</ThingDef>

	<!-- ==================== Medium Charge Blaster ==================== -->

	<ThingDef ParentName="BaseWeaponTurret">
		<defName>PCA_Gun_MCB</defName>
		<label>medium charge blaster</label>
		<graphicData>
			<texPath>Things/Building/Turrets/PCA_MCB_gun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<description>Medium charge blaster for use against lightly armored targets.</description>
		<statBases>
			<Mass>20</Mass>
			<AccuracyTouch>0.55</AccuracyTouch>
			<AccuracyShort>0.65</AccuracyShort>
			<AccuracyMedium>0.55</AccuracyMedium>
			<AccuracyLong>0.45</AccuracyLong>
			<RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
			<DeteriorationRate>0</DeteriorationRate>
			<Flammability>0</Flammability>
		</statBases>
		<equippedStatOffsets>
			<AimingDelayFactor>-0.25</AimingDelayFactor>
		</equippedStatOffsets>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_8x50mmCharged</defaultProjectile>
				<warmupTime>1.4</warmupTime>
				<range>35.9</range>
				<ticksBetweenBurstShots>6</ticksBetweenBurstShots>
				<burstShotCount>6</burstShotCount>
				<soundCast>ChargeLance_Fire</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>6</muzzleFlashScale><!-- Decreased by 33% due to the muzzle break -->
			</li>
		</verbs>
	</ThingDef>

	<ThingDef ParentName="PCA_TurretBase">
		<defName>PCA_Turret_MCB</defName>
		<label>medium charge blaster</label>
		<constructionSkillPrerequisite>10</constructionSkillPrerequisite>
		<graphicData>
			<texPath>Things/Building/Turrets/PCA_MCB_base</texPath>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<uiIconPath>Things/Building/Turrets/PCA_MCB_uiIcon</uiIconPath>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToBuild>80000</WorkToBuild>
			<Mass>40</Mass>
		</statBases>
		<description>Medium charge blaster mounted on a tripod.</description>
		<costList>
			<Steel>150</Steel>
			<Plasteel>50</Plasteel>
			<ComponentIndustrial>9</ComponentIndustrial>
			<ComponentSpacer>1</ComponentSpacer><!-- For the advanced scope -->
		</costList>
		<building>
			<turretGunDef>PCA_Gun_MCB</turretGunDef>
			<ai_combatDangerous>true</ai_combatDangerous>
		</building>
		<placeWorkers>
			<li>PlaceWorker_TurretTop</li>
			<li>PlaceWorker_ShowTurretRadius</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>ChargedShot</li>
		</researchPrerequisites>
		<minifiedDef>MinifiedThing</minifiedDef>
	</ThingDef>

