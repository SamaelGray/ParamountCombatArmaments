<Defs>

	<!-- ==================== Manned NeoStrike ==================== -->

	<ThingDef ParentName="BaseTurretGun">
		<defName>PCA_Gun_NeoStrike</defName>
		<label>NeoStrike machine gun</label>
		<graphicData>
			<texPath>Things/Building/Turrets/PCA_NeoStrike_gun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<description>Heavy machine gun for use against infantry and lightly armored vehicles.</description>
		<statBases>
			<Mass>13</Mass>
			<ShotSpread>0.05</ShotSpread>
			<SwayFactor>0.93</SwayFactor>
			<SightsEfficiency>2.06</SightsEfficiency>
			<RangedWeapon_Cooldown>0.38</RangedWeapon_Cooldown>
		</statBases>
		<equippedStatOffsets>
			<AimingAccuracy>0.25</AimingAccuracy>
			<AimingDelayFactor>-0.25</AimingDelayFactor>
		</equippedStatOffsets>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<recoilAmount>1.29</recoilAmount><!-- Decreased by 25% due to the suppressor -->
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_20x42mm_AP</defaultProjectile>
				<warmupTime>1.35</warmupTime>
				<range>55</range>
				<burstShotCount>10</burstShotCount>
				<ticksBetweenBurstShots>12</ticksBetweenBurstShots>
				<soundCast>Shot_PCA_Suppressed</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>3</muzzleFlashScale><!-- Decreased by 66% due to the suppressor -->
				<recoilPattern>Mounted</recoilPattern>
			</li>
		</verbs>
		<comps>
			<li Class="CombatExtended.CompProperties_AmmoUser">
				<magazineSize>120</magazineSize>
				<reloadTime>7.8</reloadTime>
				<ammoSet>AmmoSet_20x42mmGrenade</ammoSet>
			</li>
			<li Class="CombatExtended.CompProperties_FireModes">
				<aimedBurstShotCount>5</aimedBurstShotCount>
				<aiAimMode>AimedShot</aiAimMode>
			</li>
		</comps>
	</ThingDef>

